<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="matthew.inventoryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.AddItemsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DELETEACTIVITY"
            android:label="@string/title_activity_deleteactivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.EditItemView"
            android:label="@string/title_activity_edit_item_view"
            android:parentActivityName=".activity.AddItemsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="matthew.inventoryapp.activity.AddItemsActivity" />
        </activity>
    </application>

</manifest>